<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <com.hamilton.view.TypefacedTextView
            android:id="@+id/lblTab1"
            style="@style/style_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />

        <com.hamilton.view.TypefacedTextView
            android:id="@+id/lblSupervisorNumberTitle"
            style="@style/style_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/str_supervisior_number"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <com.hamilton.view.TypefacedTextView
            android:id="@+id/lblSupervisorNumber"
            style="@style/style_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_supervisior_number"
            android:textColor="@color/colorPrimary"
            android:textSize="24dp" />

        <com.hamilton.view.TypefacedTextView
            android:id="@+id/lblSupervisorBuildingPhotoTitle"
            style="@style/style_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/stage_progress_photo"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


    </LinearLayout>
</ScrollView>