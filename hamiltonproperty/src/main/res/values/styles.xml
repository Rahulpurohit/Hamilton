<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowsBackground</item>
    </style>

    <declare-styleable name="TypefacedTextView">
        <attr name="typeface" format="string" />
    </declare-styleable>

    <style name="style_textbox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textColorHint">@color/white_60</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:letterSpacing">.02</item>
        <item name="android:background">@drawable/text_selector</item>
        <item name="typeface">@string/font_light</item>

    </style>

    <style name="style_textview">
        <item name="android:letterSpacing">.02</item>
        <item name="typeface">@string/font_light</item>
    </style>

    <style name="style_radio_button">
        <item name="android:letterSpacing">.02</item>
    </style>


    <style name="style_button_blue">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:padding">7dip</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15dip</item>
        <item name="android:shadowColor">#4D38BCED</item>
        <item name="android:letterSpacing">.02</item>
        <item name="android:elevation">3dp</item>
        <item name="android:clickable">true</item>
        <item name="typeface">@string/font_bold</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <dimen name="button_height">42dp</dimen>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <color name="white_60">#BFffffff</color>
</resources>
